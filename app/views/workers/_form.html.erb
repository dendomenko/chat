        <div id="error_explanation">
          <h2><%= pluralize(worker.errors.count, "error") %> prohibited this worker from being saved:</h2>

          <ul>
            <% worker.errors.full_messages.each do |message| %>
                <li><%= message %></li>
                <div></div>
            <% end %>
          </ul>
        </div>
    <% end %>

    <div class="field">
      <%= f.label :name %>
      <%= f.text_field :name %>
    </div>

    <div class="field">
      <%= f.label :surname %>
      <%= f.text_field :surname %>
    </div>

    <div class="field">
      <%= f.label :phone %>
      <%= f.text_field :phone %>
    </div>

    <div class="actions">
      <%= f.submit %>
    </div>
<% end %>
