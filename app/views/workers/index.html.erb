<h1>Workers</h1>

<table>
  <thead>
  <tr>
    <th>Name</th>
    <th>Surname</th>
    <th>Phone</th>
    <th>Id</th>

    <th colspan="5"></th>
  </tr>
  </thead>

  <tbody>
  <% @workers.each do |worker| %>
      <tr>
        <td><%= worker.name %></td>
        <td><%= worker.surname %></td>
        <td><%= worker.phone %></td>
        <td><%= worker.id %></td>
        <td><%= link_to 'Show', worker %></td>

        <td><%= link_to 'Destroy', worker, method: :delete %></td>

      </tr>
  <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Worker', new_worker_path %>
